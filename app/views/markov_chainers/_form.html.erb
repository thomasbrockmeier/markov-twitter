<div class='form'>
  <%= form_for @markov, url: {action: 'create'} do |f| %>

  <div class='markov-options'>
    <div class='input-text'>
      <div class="form-label">
        <%= f.label :input_text %>
      </div>

      <div class="form-input">
        <%= f.text_area :input_text, size: '20x1' %><br />
      </div>
    </div>

    <div class='markov-option'>
      <div class="form-label">
        <%= f.label :order %>
      </div>

      <div class="form-input">
        <%= f.number_field :order, in: 1..5 %>
      </div>
    </div>

    <div class='markov-option'>
      <div class="form-label">
        <%= f.label :n_sentences %>
      </div>

      <div class="form-input">
        <%= f.number_field :n_sentences, in: 1..20 %>
      </div>
    </div>

    <div class='markov-option'>
      <div class="form-input">
        <%= f.submit 'Markify' %>
      </div>
    </div>
  </div>

  <% end %>
</div>
